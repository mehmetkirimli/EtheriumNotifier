{
    "Ethereum": { // Ethereum Sepolia settings
        "RpcUrls": [
            "https://sepolia.gateway.tenderly.co",
            "https://berachain.gateway.tenderly.co"
        ]
    },
    "Redis": {
        "Host": "localhost",
        "Port": 6379,
        "InstanceName": "Localhost-Redis",
        "ConnectTimeout": 15000,
        "SyncTimeout": 15000


    },
    "Hangfire": {
        "DashboardPath": "/hangfire",
        "StorageType": "Memory"
    },
    "Notification": {
        "MinEthAmount": 0.25 // sabit (parametrik) bir miktar üzerindeki ETH işlemleri kullanıcılara bildirilecektir. 
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=127.0.0.1,1433"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/EthereumNotifierApp.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "AllowedHosts": "*"
}